<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.3//EN"
	"http://checkstyle.sourceforge.net/dtds/import_control_1_3.dtd">
<import-control pkg="matchthree" strategyOnMismatch="disallowed">
	<allow pkg="java.io"/>
	<allow pkg="matchthree.controller"/>
	<subpackage name="controller" strategyOnMismatch="disallowed">
		<allow pkg="java.awt"/>
		<allow pkg="java.io"/>
		<allow pkg="java.net"/>
		<allow pkg="javax.swing"/>
		<allow pkg="matchthree.controller"/>
		<allow pkg="matchthree.message"/>
		<allow pkg="matchthree.model"/>
		<allow pkg="matchthree.multiplayer"/>
		<allow pkg="matchthree.util"/>
		<allow pkg="matchthree.view"/>
	</subpackage>
	<subpackage name="message" strategyOnMismatch="disallowed">
		<allow pkg="java.io"/>
		<allow pkg="matchthree.model"/>
	</subpackage>
	<subpackage name="model" strategyOnMismatch="disallowed">
		<allow pkg="java.net"/>
		<allow pkg="java.sql"/>
		<allow pkg="java.util"/>
		<allow pkg="matchthree.message"/>
	</subpackage>
	<subpackage name="util" strategyOnMismatch="disallowed">
		<allow pkg="java.awt"/>
		<allow pkg="java.io"/>
		<allow pkg="java.util"/>
		<allow pkg="javax.imageio"/>
		<allow pkg="javax.sound"/>
	</subpackage>
	<subpackage name="view" strategyOnMismatch="disallowed">
		<allow pkg="java.awt"/>
		<allow pkg="java.io"/>
		<allow pkg="java.util"/>
		<allow pkg="javax.swing"/>
		<allow pkg="matchthree.model"/>
		<allow pkg="matchthree.util"/>
	</subpackage>
</import-control>
